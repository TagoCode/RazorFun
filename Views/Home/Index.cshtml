<body>
@{
    string[] array = new string[]{"Apple","Burrito","Clam","Donut"};
        
    foreach(var word in array)
    {
        <div>
            
            @if(word[0] == 'C')
            {
                 <p style= color: red; > <span>@word</span></p>
                 <p><span style = "color:#8866ff;">@word</span></p>
            }
            else 
            {
                <p>@word</p>
            }
       </div>
    }
}
</body>

